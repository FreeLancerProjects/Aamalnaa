<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        android:background="@color/gray0"

        >
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >
          <LinearLayout
              android:id="@+id/ll"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              app:layout_constraintTop_toTopOf="parent"
              android:orientation="vertical"
              >
              <de.hdodenhof.circleimageview.CircleImageView
                  android:id="@+id/image"
                  android:layout_width="110dp"
                  android:layout_height="110dp"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginTop="20dp"
                  app:civ_circle_background_color="@color/white"
                  app:civ_border_width="1dp"
                  app:civ_border_color="@color/colorPrimary"
                  android:src="@drawable/user_profile"
                  />
              <TextView
                  android:id="@+id/tvName"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="20dp"
                  android:textColor="@color/colorPrimary"
                  android:textSize="15sp"
                  />
          </LinearLayout>

          <androidx.cardview.widget.CardView
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="8dp"
              android:layout_marginTop="8dp"
              android:layout_marginRight="8dp"
              android:layout_marginBottom="10dp"
              app:cardElevation="2dp"
              app:cardBackgroundColor="@color/white"
              app:cardCornerRadius="8dp"
              app:contentPadding="8dp"
              >
              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  >
                  <LinearLayout
                      android:id="@+id/llFavorite"
                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      >
                      <ImageView
                          android:layout_width="25dp"
                          android:layout_height="25dp"
                          android:src="@drawable/ic_heart"
                          android:tint="@color/secondColor"
                          android:padding="3dp"

                          />
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_marginLeft="10dp"
                          android:layout_marginRight="10dp"
                          android:textSize="13sp"
                          android:textColor="@color/colorPrimary"
                          android:text="@string/favorite"
                          />
                  </LinearLayout>

                  <LinearLayout
                      android:id="@+id/llAds"

                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:layout_marginTop="5dp"
                      >
                      <ImageView
                          android:layout_width="25dp"
                          android:layout_height="25dp"
                          android:src="@drawable/ic_megaphone"
                          android:tint="@color/secondColor"
                          android:padding="3dp"
                          />
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_marginLeft="10dp"
                          android:layout_marginRight="10dp"
                          android:textSize="13sp"
                          android:textColor="@color/colorPrimary"
                          android:text="@string/my_ads"
                          />
                  </LinearLayout>

                  <LinearLayout
                      android:id="@+id/llGoldenClient"

                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:layout_marginTop="5dp"
                      >
                      <ImageView
                          android:layout_width="25dp"
                          android:layout_height="25dp"
                          android:src="@drawable/golden_client"
                          android:padding="3dp"

                          />
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_marginLeft="10dp"
                          android:layout_marginRight="10dp"
                          android:textSize="13sp"
                          android:textColor="@color/colorPrimary"
                          android:text="@string/i_m_a_golden_client"
                          />
                  </LinearLayout>

                  <LinearLayout
                      android:id="@+id/llWallet"

                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:layout_marginTop="5dp"
                      >
                      <ImageView
                          android:layout_width="25dp"
                          android:layout_height="25dp"
                          android:src="@drawable/ic_wallet"
                          android:tint="@color/secondColor"
                          android:padding="3dp"

                          />
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_marginLeft="10dp"
                          android:layout_marginRight="10dp"
                          android:textSize="13sp"
                          android:textColor="@color/colorPrimary"
                          android:text="@string/my_wallet"
                          />
                  </LinearLayout>

                  <LinearLayout
                      android:id="@+id/llLang"

                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:layout_marginTop="5dp"
                      >
                      <ImageView
                          android:layout_width="25dp"
                          android:layout_height="25dp"
                          android:src="@drawable/ic_lang"
                          android:tint="@color/secondColor"
                          android:padding="3dp"

                          />
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_marginLeft="10dp"
                          android:layout_marginRight="10dp"
                          android:textSize="13sp"
                          android:textColor="@color/colorPrimary"
                          android:text="@string/language_settings"
                          />
                  </LinearLayout>

                  <LinearLayout
                      android:id="@+id/llTransfer"

                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:layout_marginTop="5dp"
                      >
                      <ImageView
                          android:layout_width="25dp"
                          android:layout_height="25dp"
                          android:src="@drawable/ic_save_money"
                          android:tint="@color/secondColor"
                          android:padding="3dp"

                          />
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_marginLeft="10dp"
                          android:layout_marginRight="10dp"
                          android:textSize="13sp"
                          android:textColor="@color/colorPrimary"
                          android:text="@string/transfer_accounts"
                          />
                  </LinearLayout>

                  <LinearLayout
                      android:id="@+id/llContact"

                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:layout_marginTop="5dp"
                      >
                      <ImageView
                          android:layout_width="25dp"
                          android:layout_height="25dp"
                          android:src="@drawable/ic_chat"
                          android:tint="@color/secondColor"
                          android:padding="3dp"

                          />
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_marginLeft="10dp"
                          android:layout_marginRight="10dp"
                          android:textSize="13sp"
                          android:textColor="@color/colorPrimary"
                          android:text="@string/contact_us"
                          />
                  </LinearLayout>

                  <LinearLayout
                      android:id="@+id/llShare"

                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:layout_marginTop="5dp"
                      >
                      <ImageView
                          android:layout_width="25dp"
                          android:layout_height="25dp"
                          android:src="@drawable/ic_forward_arrow"
                          android:tint="@color/secondColor"
                          android:padding="3dp"

                          />
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_marginLeft="10dp"
                          android:layout_marginRight="10dp"
                          android:textSize="13sp"
                          android:textColor="@color/colorPrimary"
                          android:text="@string/share_app"
                          />
                  </LinearLayout>

                  <LinearLayout
                      android:id="@+id/llRate"

                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:layout_marginTop="5dp"
                      >
                      <ImageView
                          android:layout_width="25dp"
                          android:layout_height="25dp"
                          android:src="@drawable/ic_star"
                          android:tint="@color/secondColor"
                          android:padding="3dp"

                          />
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_marginLeft="10dp"
                          android:layout_marginRight="10dp"
                          android:textSize="13sp"
                          android:textColor="@color/colorPrimary"
                          android:text="@string/rate_app"
                          />
                  </LinearLayout>

                  <LinearLayout
                      android:id="@+id/llTerm"

                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:layout_marginTop="5dp"
                      >
                      <ImageView
                          android:layout_width="25dp"
                          android:layout_height="25dp"
                          android:src="@drawable/ic_accept"
                          android:tint="@color/secondColor"
                          android:padding="3dp"

                          />
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_marginLeft="10dp"
                          android:layout_marginRight="10dp"
                          android:textSize="13sp"
                          android:textColor="@color/colorPrimary"
                          android:text="@string/terms_and_conditions"
                          />
                  </LinearLayout>

                  <LinearLayout
                      android:id="@+id/llAbout"

                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:layout_marginTop="5dp"
                      >
                      <ImageView
                          android:layout_width="25dp"
                          android:layout_height="25dp"
                          android:src="@drawable/ic_info"
                          android:tint="@color/secondColor"
                          android:padding="3dp"

                          />
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_marginLeft="10dp"
                          android:layout_marginRight="10dp"
                          android:textSize="13sp"
                          android:textColor="@color/colorPrimary"
                          android:text="@string/about_tour"
                          />
                  </LinearLayout>

                  <LinearLayout
                      android:id="@+id/llLogout"
                      android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:orientation="horizontal"
                      android:gravity="center_vertical"
                      android:layout_marginTop="5dp"
                      >
                      <ImageView
                          android:layout_width="25dp"
                          android:layout_height="25dp"
                          android:src="@drawable/ic_logout"
                          android:tint="@color/secondColor"
                          android:padding="3dp"

                          />
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center_vertical"
                          android:layout_marginLeft="10dp"
                          android:layout_marginRight="10dp"
                          android:textSize="13sp"
                          android:textColor="@color/colorPrimary"
                          android:text="@string/logout"
                          />
                  </LinearLayout>

              </LinearLayout>
          </androidx.cardview.widget.CardView>

      </LinearLayout>
    </ScrollView>

</layout>
